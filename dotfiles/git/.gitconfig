[user]
	name = Thorben Menne
	email = mennthor@aol.com

[core]
	excludesfile = ~/.gitignore_global
	quotepath = off

# Thanks to http://toolbox.pep-dortmund.org
[pull]
	rebase = true

[rebase]
	stat = true

[merge]
	conflictstyle = diff3

[log]
	decorate=auto


[format]
	pretty  = fuller


[color]
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red

[color "branch"]
	current = green reverse
	local = green
	remote = yellow

[color "diff"]
	meta = yellow
	frag = blue
	old = red
	new = green


[alias]
	s = status
	c = commit
	cm = commit -m
	b = branch
	ba = branch -a
	co = checkout
	df = diff --name-only HEAD^1 HEAD
	dfc = diff HEAD^1 HEAD
	# stash & pull & pop
	spp = "!git stash; git pull; git stash pop"
	# Thanks to ibab/dotfiles/.../.gitignore
	lg = log --pretty=oneline --abbrev-commit --graph --decorate
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

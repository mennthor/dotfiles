# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Thorben Menne
	email = mennthor@aol.com

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = green

[color "status"]
	added     = green
	changed   = yellow
	untracked = red

[format]
	pretty  = fuller

[pull]
	rebase = true

[rebase]
	stat = true

[merge]
	conflictstyle = diff3
